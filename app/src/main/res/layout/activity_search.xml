<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".SearchActivity">

    <LinearLayout
        android:id="@+id/usr_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_text2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_margin="4dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/user_logo3" />

            <TextView
                android:id="@+id/userid_Textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="4dp"
                android:layout_marginRight="8dp"
                android:text="userid"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_text"
        android:orientation="vertical"

        android:padding="16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/start_station_button"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:background="#00000000" />

            <TextView
                android:id="@+id/search_start_station_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="12dp"
                android:text="北京"
                android:textColor="#000000"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/switch_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="#00000000"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/switch_logo" />

            <TextView
                android:id="@+id/search_end_station_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginRight="12dp"
                android:gravity="right"
                android:text="上海"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/end_station_button"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="#00000000" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="12dp"
            android:background="#F5F5F5" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:text="出发时间"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/search_date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginRight="60dp"
                android:text="2020-1-11"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="" />


            <ImageButton
                android:id="@+id/search_date_button"
                android:layout_width="258dp"
                android:layout_height="50dp"
                android:layout_gravity="center|right"
                android:layout_weight="1"
                android:background="#00000000"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/arrow_logo3" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="12dp"
            android:background="#F5F5F5" />

        <Button
            android:id="@+id/search_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_button"
            android:text="搜索列车"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>